#include<stdio.h>
 int main(){

int i=1
for(i; i<=300; i++)
{
    if(i%2==0)
    {
    printf("%d is even\n",i);

    }
    while(i<=300)
    {
        if(i%2==0)
        {
            printf("%d is even\n",i);
        }
        i++;
    }
    do
    {
        if(i%2==0)
        {
        printf("%d is even\n",i);
        }i++;
    } while (i<=300);
    
    


return 0;
 }
